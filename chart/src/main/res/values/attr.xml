<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CurveChartView">
        <!--折线或者曲线 true为曲线，false为折线-->
        <attr name="curveOrBroken" format="boolean"></attr>
        <attr name="max" format="integer"></attr>
        <attr name="smartCircleColor" format="color"></attr>
        <attr name="curveLineColor" format="color"></attr>
        <attr name="smartFillColor" format="color"></attr>
        <attr name="scaleColor" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="BarChartView">
        <attr name="barWidth" format="integer"></attr>
        <attr name="maxValue" format="integer"></attr>
        <attr name="unit" format="string"></attr>
        <attr name="horizentalLineNum" format="integer"></attr>
        <attr name="lineColor" format="color"></attr>
        <attr name="chartColor" format="color"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="gradientStartColor" format="color"></attr>//渐变色起始颜色
        <attr name="gradientEndColor" format="color"></attr>//渐变色结束颜色
    </declare-styleable>
</resources>